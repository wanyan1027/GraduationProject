@model Aestheticism_Music.Models.Singer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>添加歌手</h2>

<form method="post" action="/Singers/Create" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>歌手</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="layui-form-item">
            <label class="layui-form-label">歌手：</label>
            <div class="layui-input-block">
                @Html.EditorFor(model => model.SingerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SingerName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">性别：</label>
            <div class="layui-input-block">
                @Html.EditorFor(model => model.SingerSex, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SingerSex, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">图片：</label>
            <div class="layui-input-block">
                <input type="file" name="file" id="file" value="@ViewBag.img" />
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <input type="submit" value="保存" class="layui-btn" />
                @Html.ActionLink("返回", "Index")
            </div>
        </div>
    </div>
</form>
