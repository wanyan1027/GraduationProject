@model Aestheticism_Music.Models.Singer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>修改</h2>

<form method="post" action="/Singers/Edit" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>歌手 @Model.SingerName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SingerID)

            <div class="layui-form-item">
                <label class="layui-form-label">歌手：</label>
                <div class="layui-input-block">
                    <input type="text" name="SingerName" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.SingerName">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">性别：</label>
                <div class="layui-input-block">
                    <input type="text" name="SingerSex" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.SingerSex">
                </div>
            </div>

            <div class="layui-form-item">
                <label class="layui-form-label">图片：</label>
                <div class="layui-input-block">
                    <img src="~/Content/img/@Model.SingerPohoto" name="SingerPohoto" id="SingerPohoto" />
                    <input type="file" name="file" id="file" value="@ViewBag.img" />
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <input type="submit" value="保存" class="layui-btn" />
                    @Html.ActionLink("返回", "Index")
                </div>
            </div>
    </div>
</form>
