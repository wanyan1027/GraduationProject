@model Aestheticism_Music.Models.Administer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>修改</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>管理员</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AdministerID)

    <form class="layui-form" action="/Administers/Edit">
        <div class="layui-form-item">
            <label class="layui-form-label">昵称：</label>
            <div class="layui-input-block">
                <input type="text" name="AdministerName" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.AdministerName">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">账号：</label>
            <div class="layui-input-block">
                <input type="text" name="AdministerLoginName" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.AdministerLoginName">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">密码：</label>
            <div class="layui-input-block">
                <input type="text" name="AdministerLoginPwd" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.AdministerLoginPwd">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">电话：</label>
            <div class="layui-input-block">
                <input type="text" name="AdministerPhone" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.AdministerPhone">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">邮箱：</label>
            <div class="layui-input-block">
                <input type="text" name="AdministerEmail" required lay-verify="required" autocomplete="off" class="layui-input" value="@Model.AdministerEmail">
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <input type="submit" value="保存" class="layui-btn" />
                @Html.ActionLink("返回", "Index")
            </div>
        </div> 
    </form>
</div>
    
}


