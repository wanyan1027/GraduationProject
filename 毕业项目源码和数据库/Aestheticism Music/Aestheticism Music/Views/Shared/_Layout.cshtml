<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 你的Aestheticism Music网站-属于你的网站</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/images/Logo.jpg" />
                @Html.ActionLink("Aestheticism Music", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("发现音乐", "Index", "Home")
                    <li>
                        @if (list != null)
                        {
                            foreach (var item in list)
                            {
                            <li><a href="@item.Url">@item.Name</a></li>
                        }
                    }
                    </ul>
                <div class="media-middle navbar-right">
                    @if (user != null)
                    {
                        <span style="color:white">欢迎：@user.Name</span>
                        <form action="/Home/Exit">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">注销</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Home/Login" class="btn btn-primary">用户登录</a>
                        <a href="/Home/MangerLogin" class="btn btn-primary">管理员登录</a>
                    }
                </div>
                </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 归于 Aestheticism Music 所有</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
