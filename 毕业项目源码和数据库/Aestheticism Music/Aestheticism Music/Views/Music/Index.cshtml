            </form>
            <a href="/Music/Create" class="btn btn-primary">添加</a>
            <table class="lay-even layui-table layui-bg-black">
                <tr>
                    <th>
                        歌曲名
                    </th>
                    <th>
                        文件大小
                    </th>
                    <th>
                        歌曲地址
                    </th>
                    <th>
                        歌手
                    </th>
                    <th>
                        歌曲发布者
                    </th>
                </tr>

                @foreach (var item in Model)
