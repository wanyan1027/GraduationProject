        $('#exampleModal').on('show.bs.modal', function (event) {  //监控模式框的状态为显示时触发，event捕获的是触发模式框显示的单击事件对象
            var button = $(event.relatedTarget);  //捕获单机对象
            var id = button.data('whatever');   //获得单机对象标签上传递的参
            //获取监控的模态框
            var modal = $(this);
            //获取到对应对象数据，展示在对应input上
            $.ajax({
                type: 'post',
                dataType: 'json',
                url: '/Music/Detail',
                async: false,
                data: {
                    //传递teacherid
                    id: id
                },
                success: function (data) {
                    console.log(data);

                    //find()方法，用于找出第一个符合条件的数组成
                    //给对应的input赋值（接收到data传递的值，使用键值对方式key获取值）
                    modal.find('.modal-body input[name="UserID"]').val(data["UserID"]);
                    modal.find('.modal-body input[name="UserName"]').val(data["UserName"]);
                    modal.find('.modal-body input[name="UserLoginName"]').val(data["UserLoginName"]);
                    modal.find('.modal-body input[name="UserLoginPwd"]').val(data["UserLoginPwd"]);
                    modal.find('.modal-body input[name="UserSongSheet"]').val(data["UserSongSheet"]);
                    modal.find('.modal-body input[name="UserSex"]').val(data["UserSex"]);
                    modal.find('.modal-body input[name="UserPhone"]').val(data["UserPhone"]);
                    modal.find('.modal-body input[name="UserBirthday"]').val(data["UserBirthday"]);
                    modal.find('.modal-body input[name="UserEmail"]').val(data["UserEmail"]);
                }
            })
        })

