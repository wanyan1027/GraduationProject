
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>管理员登录</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="~/Content/LoginCss/css/style.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

</head>
<body>

    <!-- main -->
    <div class="main-w3layouts wrapper">
        <div class="main-agileinfo">
            <div class="agileits-top">
                <form action="/Home/MangerLogin" method="post" id="LoginForm">
                    <input class="text" type="text" name="AdministerLoginName" placeholder="姓名" required="required">
                    <input class="text" type="password" name="AdministerLoginPwd" placeholder="密码" required="required">
                    <input type="submit" value="登录">
                </form>
                <p>创建一个账号? <a href="/Home/Login"> 立即登录(用户)!</a></p>
            </div>
        </div>
        <!-- copyright -->
        <div class="w3copyright-agile">
            <p>© 2020 All ASMusic Reserved</p>
        </div>
        <!-- //copyright -->
        <ul class="w3lsg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <!-- //main -->
    <script type="text/javascript">

        //登录js
        $("#LoginForm").validate({
            rules: {
                AdministerLoginName: { required: true, maxlength: 30 },
                AdministerLoginPwd: { required: true, checkPwd: true }
            },
            messages: {
                AdministerLoginName: { required: "账号必填", maxlength: "账号输入内容不能超过30字" },
                AdministerLoginPwd: { required: "密码必填", checkPwd: "密码组成：6-12位的字母数字组成" }
            }
        })

        $.validator.addMethod("checkPwd", function (value, e) {
            var reg = /^[A-Za-z0-9]{6,12}$/;
            return reg.test(value);
        })
    </script>
</body>
</html>
