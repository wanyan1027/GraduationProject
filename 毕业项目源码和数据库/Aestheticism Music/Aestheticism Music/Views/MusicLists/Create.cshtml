@model Aestheticism_Music.Models.MusicList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>添加</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MusicList</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="layui-form-item">
        <label class="layui-form-label">歌曲名：</label>
        <div class="layui-input-block">
            @Html.EditorFor(model => model.MusicListName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusicListName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="layui-form-item">
            <label class="layui-form-label">歌曲大小：</label>
            <div class="layui-input-block">
                @Html.EditorFor(model => model.MusicListFileSize, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusicListFileSize, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">歌曲地址：</label>
            <div class="layui-input-block">
                @Html.EditorFor(model => model.MusicListPath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MusicListPath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">歌手：</label>
            <div class="layui-input-block">
                @Html.DropDownList("SingerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SingerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">歌曲发布者：</label>
            <div class="layui-input-block">
                @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <input type="submit" value="保存" class="layui-btn" />
                @Html.ActionLink("返回", "Index")
            </div>
        </div>
    </div>
}
